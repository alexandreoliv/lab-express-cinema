<h2>Ironhack Cinema</h1>
<p>Click on the movie to check the showtimes!</p>

<div id="movies">
    <a href="/movies">Go back</a>
    {{#with movie}}
    <div id="movie">
        <div id="movie-img">
            <img src="{{image}}" alt="{{title}}">
        </div>
        <div id="movie-info">
            <p>{{title}}</p>
            <p>Director: {{director}}</p>
            <p>Stars:</p>
                <ul>
                    {{#each stars}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            <p>{{description}}</p>
            <p>{{#each showtimes}}{{this}} | {{/each}}</p>
        </div>
    </div>
    {{/with}}
</div>